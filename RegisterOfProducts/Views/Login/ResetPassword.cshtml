@model ResetPasswordModel
@{
    Layout = "_LayoutLogin";
    ViewData["Title"] = "Reset Password";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">X</button>
        @TempData["ErrorMessage"]
    </div>
}

<form asp-controller="Login" asp-action="SendLinkToResetPassword" method="post">
    <div class="mb-3">
        <label for="login" class="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" id="login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" asp-for="Email" class="form-control" id="email">
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <button type="submit" class="btn btn-primary w-100">Reset password</button>
    <a role="button" class="btn btn-secondary w-100 mt-1" asp-controller="Login" asp-action="Index">Return</a>
</form>
