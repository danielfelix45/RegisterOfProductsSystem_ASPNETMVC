@model List<ProductModel>
@{
    ViewData["Title"] = "Page Products";
}

<div class="container text-center">

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-success btn-sm close-alert" aria-label="close">X</button>
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" aria-label="close">X</button>
            @TempData["ErrorMessage"]
        </div>
    }


    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Product" asp-action="Create">Register new product</a>
    </div>
    <br />

    <div>
        <h1 class="display-4">List of Products</h1>
    </div>
</div>
<table class="table" id="table-products">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Registration date </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (ProductModel product in Model)
            {
                <tr>
                    <th scope="row">@product.Id</th>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>R$@product.Price</td>
                    <td>@product.DateRegister</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a role="button" class="btn btn-primary rounded-1" asp-route-id="@product.Id" asp-controller="Product" asp-action="Edit">Edit</a>
                            <a role="button" class="btn btn-danger rounded-1 ms-1" asp-route-id="@product.Id" asp-controller="Product" asp-action="ConfirmDelete">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
