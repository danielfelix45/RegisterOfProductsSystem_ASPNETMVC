@model UserModel


<a class="navbar-brand text-light" asp-area="" asp-controller="Home" asp-action="Index">Hello, @Model.Name</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Product" asp-action="Index">Products</a>
        </li>

        @if(Model.Profile == RegisterOfProducts.Enums.ProfileEnum.Admin)
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="User" asp-action="Index">Users</a>
            </li>
        }

        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="ChangePassword" asp-action="Index">Change Password</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Login" asp-action="Logout">Logout</a>
        </li>
    </ul>
</div>
